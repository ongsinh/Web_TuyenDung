@model Web_TuyenDung.Models.TaiKhoan

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<style>
    

    button.btn-submit-form {
        background: #EE5B1C;
        border-radius: 10px;
        display: inline-block;
        border: none;
        padding: 10px 25px;
        color: #fff;
        font-size: 18px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    main {
        flex: 1; /* Dãn main content để lấp đầy phần còn lại của trang */
        min-height: calc(100vh - 80px); /* Giả sử footer có padding-top và padding-bottom 20px */
    }

</style>

<main class="container-sm py-4">
	<div class="card col-8 mx-auto">
		<div class="card-body">
			<form asp-action="CapNhatTaiKhoan" method="post">
				<div class="mb-3">
					<label class="form-label">Tài khoản</label>
					<input asp-for="TenTaiKhoan" type="email" class="form-control">
				</div>
				<div class="mb-3">
					<label class="form-label">Mật khẩu</label>
					<input asp-for="MatKhau" type="text" class="form-control">
				</div>
				<div class="text-center mt-2">
					<button type="submit" class="btn btn-submit-form">Lưu</button>
					<br />
					<span class="mt-4 @(ViewBag.MessageCode == 0 ? "text-danger" : "text-primary")">@ViewBag.Message</span>
				</div>
			</form>
		</div>
	</div>
</main>

<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
